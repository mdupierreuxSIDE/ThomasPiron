<android.support.v4.widget.NestedScrollView
    android:id="@+id/scrollContact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_gravity="center_horizontal"
    android:columnCount="2"
    android:rowCount="3"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_columnSpan="1"
        android:layout_column="0"
        android:layout_row="0">
        <ImageButton
            android:id="@+id/appart_quick"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_appart_quick"
            android:layout_gravity="center_horizontal"
            android:scaleType="center"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@color/primary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Appartements"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_columnSpan="1"
        android:layout_column="1"
        android:layout_row="0">
        <ImageButton
            android:id="@+id/maison_quick"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_maison_quick"
            android:layout_gravity="center_horizontal"
            android:scaleType="center"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@color/primary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Maisons"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_columnSpan="1"
        android:layout_row="1"
        android:layout_column="0">
        <ImageButton
            android:id="@+id/inspi_quick"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_inspi_quick"
            android:layout_gravity="center_horizontal"
            android:scaleType="center"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@color/primary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Inspiration"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_columnSpan="1"
        android:layout_row="1"
        android:layout_column="1">
        <ImageButton
            android:id="@+id/social_quick"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_social_quick"
            android:layout_gravity="center_horizontal"
            android:scaleType="center"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@color/primary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Suivez-nous"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_columnSpan="1"
        android:layout_row="2"
        android:layout_column="0">
        <ImageButton
            android:id="@+id/contact_quick"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_contact_quick"
            android:layout_gravity="center_horizontal"
            android:scaleType="center"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@color/primary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Contact"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_columnSpan="1"
        android:layout_row="2"
        android:layout_column="1">
        <ImageButton
            android:id="@+id/groupe_quick"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_groupe_quick"
            android:layout_gravity="center_horizontal"
            android:scaleType="center"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@color/primary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Le groupe"/>
    </LinearLayout>

</GridLayout>
    </android.support.v4.widget.NestedScrollView>